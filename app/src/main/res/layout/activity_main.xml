<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <TextView
            android:id="@+id/baslikT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Doviz Burosu"
            android:textSize="30dp" />
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="1"
        android:columnOrderPreserved="false"
        android:layout_marginLeft="30dp">

        <EditText
            android:id="@+id/editT"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:inputType="number"
            android:text="1"
            />

        <Button
            android:id="@+id/guncelleB"
            android:text="Guncelle"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="100dp"
            android:layout_height="40dp"
            />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_weight="5"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:columnOrderPreserved="false"
        android:rowCount="4">

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:checkedButton="@+id/radio_TRY">

            <RadioButton
                android:id="@+id/radio_TRY"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="TRY" />

            <RadioButton
                android:id="@+id/radio_EUR"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="EUR" />

            <RadioButton
                android:id="@+id/radio_USD"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="USD" />

            <RadioButton
                android:id="@+id/radio_GBP"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="GBP" />


        </RadioGroup>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">


        <TextView
            android:id="@+id/dolarT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Dolar"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/euroT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Euro"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/poundT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Pound"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tryT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Turk Lirasi"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>